extend layout

block title
    title Contact Form | The Stanley Parable 2

append script
    script(src="/js/contact.js" defer)

block content
    h1 Contact Form
    form(action="/contact" method="post")
        p
            label(for="name") Name:
            |
            |
            input#name(type="text" name="name" required)
        p
            label(for="email") Email:
            |
            |
            input#email(type="email" name="email" required)
        p
            label(for="meeting") Meeting Type:
            |
            |
            select#meeting(name="meeting")
                option Online
                option In Person
        p
            label(for="date") Meeting Date:
            |
            |
            input#date(type="date" name="date")
        p
            label(for="soul") Forfeit Soul:
            |
            |
            input#soul(type="checkbox" name="soul")
        p#output
        input(type="submit")